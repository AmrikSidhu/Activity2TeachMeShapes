<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewAct1"
        android:layout_width="228dp"
        android:layout_height="359dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/start" />

    <TextView
        android:id="@+id/textOptions"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="6dp"
        android:background="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAct1" />

    <TextView
        android:id="@+id/txtAnswer"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="19dp"
        android:background="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewAct1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtScores"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:background="#FFC107"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewAct1"
        app:layout_constraintTop_toBottomOf="@+id/txtAnswer" />

    <TextView
        android:id="@+id/txtQuez2"
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="9dp"
        android:background="#FFEB3B"
        android:text="\n	Choose correct title of this shape and press button \n	number.\n	Button 1: Rectangle\n	Button 2: Round\n	Button 3: Circle\n	Button 4: Star\n\n	Click Button from the particle device\n	"
        android:textColor="#3F51B5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textOptions"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAct1" />
</android.support.constraint.ConstraintLayout>